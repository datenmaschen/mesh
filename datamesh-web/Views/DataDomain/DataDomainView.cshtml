@model DataDomainModel

<div class="container">
    <div class="row px-3 my-4 py-2 rounded-15">
        <h3>Datadomain - @Model.Name</h3>
    </div>
</div>

<div class="container">
    <div class="row px-3 py-4 rounded-5 bg-white">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Attribute</th>
                    <th>Value</th>
                </tr>
            </thead>
                <tbody>
                    <tr>
                        <td>Id</td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td>Key</td>
                        <td>@Model.Key</td>
                    </tr>
                    <tr>
                        <td><label asp-for="NameAbbrevationLong" class="form-label"></label></td>
                        <td>@Html.DisplayFor(model => model.NameAbbrevationLong)</td>
                    </tr>
                    <tr>
                        <td><label asp-for="NameAbbreviationShort" class="form-label"></label></td>
                        <td>@Html.DisplayFor(model => model.NameAbbreviationShort)</td>
                    </tr>
                    <tr>
                        <td><label asp-for="SubscriptionName" class="form-label"></label></td>
                        <td>@Html.DisplayFor(model => model.SubscriptionName)</td>
                    </tr>
                    <tr>
                        <td><label asp-for="SubscriptionId" class="form-label"></label></td>
                        <td>@Html.DisplayFor(model => model.SubscriptionId)</td>
                    </tr>
                    <tr>
                        <td><label asp-for="DevOpsProjectName" class="form-label"></label></td>
                        <td>@Html.DisplayFor(model => model.DevOpsProjectName)</td>
                    </tr>
                </tbody>
        </table>
    </div>
</div>
@model IEnumerable<datamesh_web.Models.DataDomainModel>

<div class="container">
    <div class="jumbotron bg-white rounded-5 py-4 px-1 my-5">
        <h1>Datadomain(s)</h1>
    </div>
</div>

<div class="container">
    <div class="row px-3 py-4 rounded-5 bg-white">
        <table class="table table-striped table-hover table-sm">
            <tdead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Key</th>
                    <th>Actions</th>
                </tr>
            </tdead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Key</td>
                            <td>
                                <a class="nav-link text-dark" asp-area="" asp-controller="DataDomain" asp-action="DataDomainIndex"></a>
                                <a asp-area="" asp-controller="DataDomain" asp-action="DataDomainView" asp-route-id="@item.Id">View</a>
                            </td>  
                        </tr>
                    }
                </tbody>
        </table>
    </div>
</div>